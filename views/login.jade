extends layout

block content
    .container.bodycenter
        h4.form-signin-heading Please Sign In
        form.form-signin(action="/all", method="post")
            .input-field
                input(id="email" type="text", name="username")
                label(for="email") Email
            .input-field
                input(id="password" type="password", name="password")
                label(for="password") Password
            button.waves-effect.waves-light.btn.blue.darken-2(type="submit") Sign in




